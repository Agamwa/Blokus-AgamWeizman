<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/cut_background"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChooseFragment">

    <TextView
        android:layout_width="871dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-230dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/spicy_rice"
        android:text="Choose how to play"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="40dp" />

    <Button
        android:id="@+id/btnTwoPlayers"
        android:layout_width="163dp"
        android:layout_height="50dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/titles"
        android:text="Two Players "
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnPracticeGame"
        android:layout_width="163dp"
        android:layout_height="50dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/titles"
        android:text="Practice Game"
        android:textSize="20dp" />
</LinearLayout>