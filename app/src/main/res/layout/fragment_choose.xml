<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/projectbackground"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChooseFragment">

    <TextView
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/titles"
        android:text="Choose how to play"
        android:textAlignment="center"
        android:textColor="#EBEDF6"
        android:textSize="40dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnPracticeGame"
        android:layout_width="163dp"
        android:layout_height="50dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#17287C"
        android:fontFamily="@font/titles"
        android:text="Practice game"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnTwoPlayers"
        android:layout_width="163dp"
        android:layout_height="50dp"
        android:layout_marginLeft="127dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#17287C"
        android:fontFamily="@font/titles"
        android:text="Two players"
        android:textSize="20dp" />
</LinearLayout>