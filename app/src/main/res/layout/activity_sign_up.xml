<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/projectbackground"
    android:orientation="vertical"
    tools:context=".signUpActivity">

    <TextView
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/titles"
        android:text="Sign up"
        android:textColor="#EBEDF6"
        android:textSize="40dp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tiSignUpName"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="306dp"
            android:layout_marginLeft="45dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="Enter your first name" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tiSignUpLastName"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="306dp"
                android:layout_marginLeft="45dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Enter your last name" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tiSignUpEmail"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="306dp"
                    android:layout_marginLeft="45dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:hint="Enter your email adress" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tiSignUpUsername"
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="306dp"
                        android:layout_marginLeft="45dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="Enter username" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tiSignUpPassword"
                        android:layout_width="match_parent"
                        android:layout_marginTop="30dp"
                        android:layout_height="match_parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="306dp"
                            android:layout_marginLeft="45dp"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:hint="Enter password" />
                    </com.google.android.material.textfield.TextInputLayout>
                </com.google.android.material.textfield.TextInputLayout>
            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.textfield.TextInputLayout>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="132dp"
        android:text="Sign up"
        android:layout_height="50dp"
        android:layout_marginTop="-100dp"
        android:layout_marginLeft="127dp"
        android:backgroundTint="#17287C"
        android:fontFamily="@font/titles"
        android:textSize="20dp" />
</LinearLayout>