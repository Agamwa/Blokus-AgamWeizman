<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/projectbackground"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <TextView
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="117dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/titles"
        android:text="Welcome to"
        android:textColor="#EBEDF6"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/titles2"
        android:text="Blokus"
        android:textColor="#EBEDF6"
        android:textSize="40dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="136dp"
        android:layout_height="54dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="#17287C"
        android:fontFamily="@font/titles"
        android:text="to sign in"
        android:textSize="22dp" />


    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="136dp"
        android:layout_height="54dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#17287C"
        android:fontFamily="@font/titles"
        android:text="to sign up"
        android:textSize="22dp" />


</LinearLayout>