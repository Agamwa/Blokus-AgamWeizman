<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cut_background"
    android:orientation="vertical"
    tools:context=".BoardFragment">


    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:id="@+id/gridLayoutPlayer2"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/imageViewPlayer2_1"
            android:layout_width="95dp"
            android:layout_height="121dp"
            android:src="@drawable/back"
            app:layout_constraintEnd_toStartOf="@+id/imageViewPlayer2_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewPlayer2_2"
            android:layout_width="95dp"
            android:layout_height="121dp"
            android:src="@drawable/back"
            app:layout_constraintEnd_toStartOf="@+id/imageViewPlayer2_3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageViewPlayer2_1"
            app:layout_constraintTop_toTopOf="@+id/imageViewPlayer2_1" />

        <ImageView
            android:id="@+id/imageViewPlayer2_3"
            android:layout_width="95dp"
            android:layout_height="121dp"
            android:src="@drawable/back"
            app:layout_constraintEnd_toStartOf="@+id/imageViewPlayer2_4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageViewPlayer2_2"
            app:layout_constraintTop_toTopOf="@+id/imageViewPlayer2_2" />

        <ImageView
            android:id="@+id/imageViewPlayer2_4"
            android:layout_width="95dp"
            android:layout_height="121dp"
            android:src="@drawable/back"
            app:layout_column="4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageViewPlayer2_3"
            app:layout_constraintTop_toTopOf="@+id/imageViewPlayer2_3"
            app:layout_row="0" />


    </androidx.gridlayout.widget.GridLayout>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/sansita_italic"
        android:text="player 2"
        android:textColor="@color/blue"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textViewTurn"
        android:layout_width="187dp"
        android:layout_height="47dp"
        android:fontFamily="@font/spicy_rice"
        android:text="Player 1's turn"
        android:textColor="@color/blue"
        android:layout_gravity="center"
        android:textSize="30dp" />


    <Button
        android:id="@+id/btnFinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/sansita_italic"
        android:layout_gravity="center"
        android:text="Rat a tat cat!" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/drawTop"
            android:layout_width="119dp"
            android:layout_height="186dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/garbageTop"
            android:layout_width="119dp"
            android:layout_height="186dp"
            android:layout_marginLeft="80dp"
            android:orientation="horizontal"
            android:src="@drawable/back"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/sansita_italic"
        android:text="player 1"
        android:textColor="@color/blue"
        android:textSize="20dp" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayoutPlayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/imageViewPlayer1_1"
            android:layout_width="95dp"
            android:layout_height="121dp"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/imageViewPlayer1_2"
            android:layout_width="95dp"
            android:layout_height="121dp"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/imageViewPlayer1_3"
            android:layout_width="95dp"
            android:layout_height="121dp"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/imageViewPlayer1_4"
            android:layout_width="95dp"
            android:layout_height="121dp"
            android:src="@drawable/back" />


    </androidx.gridlayout.widget.GridLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="303dp"
        android:layout_height="57dp"
        android:layout_gravity="center"
        android:src="@drawable/baseline_access_time_24" />


    <TextView
        android:id="@+id/timerTV"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:fontFamily="@font/sansita_italic"
        android:text="00:00"
        android:textColor="@color/blue"
        android:textSize="20dp" />



</LinearLayout>
